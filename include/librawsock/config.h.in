/* Feature flags */
#cmakedefine ENABLE_COVERAGE
#cmakedefine ENABLE_DEBUG_LOGGING

/* Platform detection */
#ifdef __linux__
    #define LIBRAWSOCK_PLATFORM_LINUX 1
#elif defined(__APPLE__)
    #define LIBRAWSOCK_PLATFORM_MACOS 1
#elif defined(__FreeBSD__)
    #define LIBRAWSOCK_PLATFORM_FREEBSD 1
#else
    #define LIBRAWSOCK_PLATFORM_UNKNOWN 1
#endif

/* Compiler attributes */
#ifdef __GNUC__
    #define LIBRAWSOCK_COMPILER_GCC 1
    #define LIBRAWSOCK_LIKELY(x)   __builtin_expect(!!(x), 1)
    #define LIBRAWSOCK_UNLIKELY(x) __builtin_expect(!!(x), 0)
#else
    #define LIBRAWSOCK_LIKELY(x)   (x)
    #define LIBRAWSOCK_UNLIKELY(x) (x)
#endif

/* API visibility */
#if defined(_WIN32) || defined(__CYGWIN__)
    #ifdef BUILDING_LIBRAWSOCK
        #define LIBRAWSOCK_API __declspec(dllexport)
    #else
        #define LIBRAWSOCK_API __declspec(dllimport)
    #endif
#else
    #if __GNUC__ >= 4
        #define LIBRAWSOCK_API __attribute__((visibility("default")))
    #else
        #define LIBRAWSOCK_API
    #endif
#endif

#endif /* LIBRAWSOCK_CONFIG_H */
