#ifndef LIBRAWSOCK_CONFIG_H
#define LIBRAWSOCK_CONFIG_H

/* Version information */
#define LIBRAWSOCK_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define LIBRAWSOCK_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define LIBRAWSOCK_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define LIBRAWSOCK_VERSION_STRING "@PROJECT_VERSION@"

/* System capabilities */
#cmakedefine HAVE_SYS_SOCKET_H
#cmakedefine HAVE_NETINET_IN_H
#cmakedefine HAVE_ARPA_INET_H
#cmakedefine HAVE_NET_IF_H
#cmakedefine HAVE_IFADDRS_H
#cmakedefine HAVE_SOCKET
